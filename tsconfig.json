{
  "compilerOptions": {
    "target": "ESNext",
    "moduleResolution": "Node",
    "module": "ESNext",
    "alwaysStrict": true,
    "strict": true,
    "skipLibCheck": true,
    "noImplicitOverride": true,
    "esModuleInterop": true,
    "incremental": true,
    "rootDir": "src",
    "outDir": "dist"
  },
  "include": ["src"],
  "exclude": ["prisma"]
}
